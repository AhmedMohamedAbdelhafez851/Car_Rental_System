@model MyProject.Web.ViewModels.CustomerPageViewModel

@{
    ViewData["Title"] = "إدارة العملاء";
}

<h2 class="mb-4">إدارة العملاء</h2>

<!-- ✅ إضافة عميل جديد -->
<div class="card mb-4">
    <div class="card-header">إضافة عميل جديد</div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="NewCustomer.FullName" class="form-label"></label>
                    <input asp-for="NewCustomer.FullName" class="form-control" />
                    <span asp-validation-for="NewCustomer.FullName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="NewCustomer.NationalId" class="form-label"></label>
                    <input asp-for="NewCustomer.NationalId" class="form-control" />
                    <span asp-validation-for="NewCustomer.NationalId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="NewCustomer.PhoneNumber" class="form-label"></label>
                    <input asp-for="NewCustomer.PhoneNumber" class="form-control" />
                    <span asp-validation-for="NewCustomer.PhoneNumber" class="text-danger"></span>
                </div>
              @*   <div class="col-md-6">
                    <label asp-for="NewCustomer.Email" class="form-label"></label>
                    <input asp-for="NewCustomer.Email" class="form-control" />
                    <span asp-validation-for="NewCustomer.Email" class="text-danger"></span>
                </div> *@
                <div class="col-12">
                    <button type="submit" class="btn btn-success">إضافة</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- ✅ جدول العملاء -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>الاسم</th>
            <th>الرقم القومي</th>
            <th>رقم الهاتف</th>
            <th>البريد الإلكتروني</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.NationalId</td>
                <td>@item.PhoneNumber</td>
@*                 <td>@item.Email</td>
 *@                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
