@model MyProject.Web.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Custom CSS for enhanced design -->
<style>
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .stat-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        overflow: hidden;
        position: relative;
    }

        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #ff6b6b, #4ecdc4);
        }

        .stat-card.customers::before {
            background: linear-gradient(90deg, #667eea, #764ba2);
        }

        .stat-card.cars::before {
            background: linear-gradient(90deg, #f093fb, #f5576c);
        }

        .stat-card.available::before {
            background: linear-gradient(90deg, #4facfe, #00f2fe);
        }

        .stat-card.contracts::before {
            background: linear-gradient(90deg, #43e97b, #38f9d7);
        }

        .stat-card.drivers::before {
            background: linear-gradient(90deg, #fa709a, #fee140);
        }

        .stat-card.fines::before {
            background: linear-gradient(90deg, #ff9a9e, #fecfef);
        }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.8;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0.5rem 0;
        color: #2c3e50;
    }

    .stat-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #7f8c8d;
        margin-bottom: 0;
    }

    .revenue-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 20px;
        color: white;
        box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        position: relative;
        overflow: hidden;
    }

        .revenue-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.1);
            transform: rotate(45deg);
            transition: all 0.3s ease;
        }

        .revenue-card:hover::before {
            top: -60%;
            right: -60%;
        }

    .revenue-icon {
        font-size: 4rem;
        opacity: 0.9;
        margin-bottom: 1rem;
    }

    .revenue-amount {
        font-size: 3rem;
        font-weight: 700;
        margin: 1rem 0;
    }

    .revenue-title {
        font-size: 1.3rem;
        font-weight: 600;
        opacity: 0.9;
    }

    .card-body {
        padding: 2rem 1.5rem;
        position: relative;
        z-index: 1;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .page-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-top: 0.5rem;
    }

    /* Navigation Buttons Styles */
    .nav-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 20px;
        padding: 3rem 2rem;
        margin-top: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    .nav-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .nav-btn {
        border: none;
        border-radius: 12px;
        padding: 1rem 1.5rem;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        min-width: 180px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

        .nav-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            text-decoration: none;
        }

        .nav-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }

        .nav-btn:hover::before {
            left: 100%;
        }

        .nav-btn i {
            margin-left: 0.5rem;
            font-size: 1.1rem;
        }

    /* Custom colors for navigation buttons */
    .nav-btn-customers {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .nav-btn-cars {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .nav-btn-contracts {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .nav-btn-drivers {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .nav-btn-maintenance {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        color: #333;
    }

    .nav-btn-fines {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        color: #333;
    }

    .nav-btn-payments {
        background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        color: #333;
        border: 2px solid #667eea;
    }

    .nav-btn-reservations {
        background: linear-gradient(135deg, #d299c2 0%, #fef9d7 100%);
        color: #333;
        border: 2px solid #43e97b;
    }

  
</style>
